    "diff": "5.2.0",
    "eslint": "8.54.0",
    "husky": "7.0.4",
    "jshint": "2.13.4",
    "mocha": "10.2.0",
    "sinon": "13.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --quiet",
      "pre-push": "npm run lint -- --quiet && npm run test"
    }
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "node-option": [
      "no-warnings",
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ]
  }
}
