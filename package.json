{
  "name": "@mieweb/wikigdrive",
  "version": "2.0.0-alpha",
  "type": "module",
  "description": "Google Drive to MarkDown synchronization",
  "keywords": [
    "GDrive",
    "CLI",
    "MarkDown",
    "Google Docs",
    "Wiki"
  ],
  "engines": {
    "node": ">= 16.13.1",
    "npm": ">= 8.1.2"
  },
  "bin": {
    "wgd": "./src/cli.sh",
    "wikigdrive": "./src/cli.sh",
    "wikigdrive-ts": "./src/cli.sh"
  },
  "main": "src/main.ts",
  "scripts": {
    "test": "mocha --require ts-node/register --ui bdd test/*.ts test/**/*.ts",
    "lint": "eslint ./src/**/*.ts ./src/**/*.vue",
    "start": "wikigdrive-ts watch --server 3000",
    "build": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mieweb/wikiGDrive.git"
  },
  "author": {
    "name": "Medical Informatics Engineering",
    "url": "https://www.mieweb.com/"
  },
  "contributors": [
    {
      "name": "Doug Horner",
      "email": "horner@mieweb.com",
      "url": "https://github.com/horner"
    },
    {
      "name": "William Reiske",
      "email": "wreiske@mieweb.com",
      "url": "https://github.com/wreiske"
    },
    {
      "name": "Alan Quandt",
      "email": "aquandt@mieweb.com",
      "url": "https://github.com/thedigicraft"
    },
    {
      "name": "Grzegorz Godlewski",
      "url": "https://github.com/ggodlewski"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mieweb/wikiGDrive/issues"
  },
  "homepage": "https://github.com/mieweb/wikiGDrive#readme",
  "dependencies": {
    "async": "3.2.3",
    "buffer": "^5.7.1",
    "casual": "1.6.2",
    "cli-progress": "3.10.0",
    "dayjs": "1.11.1",
    "dotenv": "^8.6.0",
    "enquirer": "^2.3.6",
    "env-paths": "2.2.1",
    "express": "4.17.3",
    "express-jwt": "6.1.2",
    "googleapis": "^71.0.0",
    "htmlparser2": "7.2.0",
    "identify-filetype": "^1.0.0",
    "js-yaml": "4.1.0",
    "jszip": "3.7.1",
    "listr2": "^3.14.0",
    "mathjs": "10.5.0",
    "minimist": "1.2.6",
    "node-fetch": "2.6.7",
    "nodegit": "0.27.0",
    "nunjucks": "^3.2.3",
    "open": "^7.4.2",
    "relateurl": "0.2.7",
    "sharp": "0.30.5",
    "sharp-phash": "^2.0.0",
    "slugify": "1.6.5",
    "stream": "^0.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.5.5",
    "winston": "3.6.0",
    "winston-transport": "4.5.0",
    "ws": "8.7.0",
    "xml-js": "1.6.11",
    "xmldoc": "^1.1.2"
  },
  "devDependencies": {
    "@swc/core": "^1.2.156",
    "@swc/helpers": "^0.3.7",
    "@types/async": "3.2.12",
    "@types/express": "4.17.13",
    "@types/mocha": "9.1.0",
    "@types/node": "^16.11.19",
    "@types/nodegit": "0.27.10",
    "@types/relateurl": "0.2.29",
    "@types/xmldoc": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "caniuse-lite": "1.0.30001317",
    "chai": "4.3.6",
    "chalk": "5.0.1",
    "diff": "5.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "7.0.4",
    "jshint": "2.13.4",
    "mocha": "9.2.2",
    "sinon": "13.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --quiet",
      "pre-push": "npm run lint -- --quiet && npm run test"
    }
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "node-option": [
      "no-warnings",
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ],
    "spec": "test/**/*.ts"
  }
}
