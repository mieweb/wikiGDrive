{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "nodenext",
    "moduleResolution": "node16",
    "target": "es2022",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "node16",
      "esModuleInterop": true,
      "moduleResolution": "node16"
    }
  },
  "exclude": [
    "node_modules"
  ]
}
