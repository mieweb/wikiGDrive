{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2021",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "node"
    }
  },
  "exclude": [
    "node_modules"
  ]
}
